<h1>投稿の情報を入力</h1>

<%= form_with(model: @post, local: true) do |f| %>
  
  <%= f.label :category_id %><br>
  <%= f.collection_select :category_id, Category.all, :id, :name %>

  
  <%= f.label :title, 'タイトル' %>
  <%= f.text_field :title %>
  
  <%= f.label :content, '投稿内容' %>
  <%= f.text_field :content %>
  
  <%= f.label :contacthere, 'SNSアカウント(こちらでメッセージのやり取りを行います)' %>
  <%= f.text_field :contacthere %>



  <%= f.submit '投稿' %>
<% end %>

<%= link_to '一覧に戻る', root_path %>