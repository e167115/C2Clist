<div class="container">
  <div class="center jumbotron">
    <div class="text-center">
      <h1>C2CList <i class="fas fa-car-side"></i></h1>
      <p>みんなで情報を共有しよう</p>
    </div>
  </div>
</div>

<h4 class="text-center">カテゴリ一覧</h4>
  
  <div class="row mb-5">
    <div class="col-sm-8 offset-sm-2">
      <div class="btn-toolbar">
          <div class="byn-group">
              <a href = "/?category_id=1" class="btn btn-secondary">売ります・買います</a>
              <a href = "/?category_id=2" class="btn btn-secondary">中古車</a>
              <a href = "/?category_id=3" class="btn btn-secondary">バイト</a>
              <a href = "/?category_id=4" class="btn btn-secondary">助け合い</a>
              <a href = "/?category_id=5" class="btn btn-secondary">メンバー募集</a>
          </div>
      </div>  
    </div>
  </div>  
  
  
  
<div class="text-center"><h4>投稿一覧</h4></div>


<% if @posts.any? %>
  <table class="table table-striped text-center position-relative">
    <thead>
      <tr>
        <th scope="col">ジャンル</th>
        <th scope="col">タイトル</th>
      </tr>
    </thead>
    <tbody>
      <% @posts.each do |post| %>
          <tr>
              <td><%= post.category.name %></td>
              <td><%= link_to post.title, post %></td>
          </tr>
      <% end %>
    </tbody>
  </table>
  <div>
    <%= paginate @posts %>
  </div>
<% end %>



<% if logged_in? %>
 <%= link_to '新規投稿', new_post_path, class: "btn btn-primary" %>
<% end %>


