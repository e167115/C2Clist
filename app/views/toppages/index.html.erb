<div class="container">
  <div class="center jumbotron">
    <div class="text-center">
      <h1>C2CList <i class="fas fa-car-side"></i></h1>
      <p>みんなで情報を共有しよう</p>
    </div>
  </div>
</div>

<h4 class="text-center">カテゴリ一覧</h4>
  
  <div class="row mb-5">
    <div class="col-sm-6 offset-sm-3">
      <% @categories.each do |category| %>
        <mark><%= category.name %><span></span></mark>
      <% end %>
    </div>  
  </div>
  
  
  
<div class="text-center mt-5"><h4>投稿一覧</h4></div>


<% if @posts.any? %>
  <table class="table table-striped text-center position-relative">
    <thead>
      <tr>
        <th scope="col">ジャンル</th>
        <th scope="col">タイトル</th>
      </tr>
    </thead>
    <tbody>
      <% @posts.each do |post| %>
          <tr>
              <td><%= link_to post.category.name, post %></td>
              <td><%= link_to post.title, post %></td>
          </tr>
      <% end %>
    </tbody>
  </table>
  <div>
    <%= paginate @posts %>
  </div>
<% end %>



<% if logged_in? %>
 <%= link_to '新規投稿', new_post_path, class: "btn btn-primary" %>
<% end %>