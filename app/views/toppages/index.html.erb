<h1>投稿一覧</h1>

<% if @posts.any? %>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>id</th>
        <th>タイトル</th>
      </tr>
    </thead>
    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td><%= link_to post.id, post %></td>
          <td><%= post.title %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <div>
    <%= paginate @posts %>
  </div>
<% end %>

<% if logged_in? %>
 <%= link_to '新規投稿', new_post_path, class: "btn btn-primary" %>
<% end %>